<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <Button
        android:id="@+id/reg"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/register" />

    <com.iangclifton.android.floatlabel.FloatLabel
        android:id="@+id/RegID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/back"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:hint="ID"
        android:layout="@layout/custom_float_label"
        android:textColorHint="#000000" >

    </com.iangclifton.android.floatlabel.FloatLabel>
    
    <Button
        android:id="@+id/back"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/reg"
        android:layout_alignBottom="@+id/reg"
        android:layout_alignParentLeft="true"
        android:background="@drawable/back" />

    <com.iangclifton.android.floatlabel.FloatLabel
        android:id="@+id/RegPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/RegID"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Password"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:layout="@layout/custom_float_label"
        android:textColorHint="#000000" >

    </com.iangclifton.android.floatlabel.FloatLabel>

        <com.iangclifton.android.floatlabel.FloatLabel
            android:id="@+id/RegPasswordAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/RegPassword"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Confirm Password"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:layout="@layout/custom_float_label"
            android:textColorHint="#000000" >

        </com.iangclifton.android.floatlabel.FloatLabel>

                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/RegPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/RegPasswordAgain"
                    android:layout_marginLeft="10dp"
                    android:hint="RegPhone"
                    android:inputType="phone"
                    android:textColor="#000000"
                    android:layout="@layout/custom_float_label"
                    android:textColorHint="#000000" >

                </com.iangclifton.android.floatlabel.FloatLabel>
                
</RelativeLayout>